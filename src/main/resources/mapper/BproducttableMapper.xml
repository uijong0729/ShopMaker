<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="global.sesoc.bigstar.dao.BproducttableMapper">

	<select id="selectbproducttable" resultType="Bproducttable">
		select * from
		Bproducttable where productcode =#{productcode}

	</select>
	
	<!-- 장바구니 -->
	<select id="getCart" resultType="Bproducttable">
		select p.productname, p.productprice, p.productquantity, p.productimage, p.productcolor, p.productsize
		from Bproducttable p, Bcustomer c 
		where p.productcode = #{productcode} AND c.customercode = #{customercode}
	</select>

	<select id="selectallbproducttable" resultType="Bproducttable">
		select * from
		Bproducttable
	</select>

	<select id="getProductdetailListByName" resultType="Bproducttable">
		select * from
		Bproducttable where productname =#{productname}
	</select>

	<insert id="insertbproducttable" parameterType="Bproducttable">
		insert into BPRODUCTTABLE(productcode,productname,productprice,productquantity,productsize,productcolor,productspec,productimage,productpushdate,productdisplay,productkind,productsale,membercode) 
                    VALUES(BPRODUCTTABLE_seq.NEXTVAL,#{Bproducttable.productname},#{Bproducttable.productprice},#{Bproducttable.productquantity},#{Bproducttable.productsize},#{Bproducttable.productcolor},#{Bproducttable.productspec},#{Bproducttable.productimage},sysdate,1,#{Bproducttable.productkind},#{Bproducttable.productsale},#{Bproducttable.membercode}) 
	</insert>
</mapper>